<%= render "shared/errors", obj: shop %>
<%= form_with model: shop, local:true do |f| %>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :store_name %>
    <%= f.text_field :store_name, class: "form-control", placeholder: "店舗名を入れてください" %>
  </div>
  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control", placeholder: "住所を入れてください"%>
  </div>
  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, class: "form-control", placeholder: "電話番号を入れてください" %>
  </div>
  <div class="form-group">
    <%= f.label :open_hour %>
    <%= f.text_field :open_hour, class: "form-control", placeholder: "営業時間を入れてください(例8:00~17:00)" %>
  </div>
  <div class="form-group">
    <%= f.label :caption %>
    <%= f.text_field :caption, class: "form-control", placeholder: "お店の一言情報を入れてください" %>
  </div>
  <div class="form-group">
    <%= f.label :map_url %>
    <%= f.text_area :map_url, class: "form-control", placeholder: "googlemapのURLを入れてください" %>
  </div>
  <p>
    <%= f.submit t(".shop"), class: "btn btn-block btn-primary" %>
  </p>
  <p>
    <%= link_to t(".back"), :back, class: "btn btn-block btn-secondary" %>
  </p>
<% end %>